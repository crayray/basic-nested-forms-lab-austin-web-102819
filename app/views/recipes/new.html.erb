<%= form_for @recipe do |r| %>
    <%= r.label :title %>
    <%= r.text_field :title %><br>

    # Initially I couldn't get this to work because i forgot to nest this inside the r enumerable
    <%= r.fields_for :ingredients do |i| %>
        <%= i.label :name %>
        <%= i.text_field :name %>
        <%= i.label :quantity %>
        <%= i.text_field :quantity %><br/>
    <% end %>

    <%= r.submit %>
<% end %>